/*
//------------------------------
//TitleWindow
//------------------------------
*/
mx|TitleWindow {
	resizeCornerColor:#005992;       
	backgroundAlpha: 1;
	borderAlpha: 1;
	border-color: #526D8C; /*659dc7*/
	borderThicknessLeft: 10;
	borderThicknessRight: 10;
	borderThicknessBottom: 10;	
	borderThicknessTop: 10;	
	footerColors: #88bbe2, #88bbe2;
	footerAlpha: 0.68;
	highlightAlphas: 0.48, 0.22;
	headerColors: #4280b3, #659dc7;
	background-size:"100%";
	backgroundColor: #ffffff;
	fontWeight:normal;
	header-Height: 22;
	padding-bottom: 10;
	padding-left: 10;
	padding-right: 10;
	padding-top: 10;
	roundedBottomCorners: false;
	verticalGap : 0;
	cornerRadius: 6;
	borderThickness: 1;
	borderStyle: solid;	
	shadowDistance: 4;
	shadowDirection: right;
	dropShadowColor: #b3b3b3;
	titleStyleName: "mytitlewindowTitle";
}
.mytitlewindowTitle {
	letterSpacing: 0;
	color: #ffffff;
	textAlign: left;
	fontSize: 11;
	fontWeight: normal;
	leading : 0;
}
